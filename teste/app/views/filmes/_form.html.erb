 <%=render '/layouts/header'%>

<%= form_for @filme, :html => { :class => "form-horizontal filme" } do |f| %>

  <% if @filme.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@filme.errors.count, "error") %> prohibited this filme from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @filme.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :titulo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:titulo) %>
  </div>
  <div class="form-group">
    <%= f.label :ano, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ano, :class => 'form-control' %>
    </div>
    <%=f.error_span(:ano) %>
  </div>
  <div class="form-group">
    <%= f.label :duracao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :duracao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:duracao) %>
  </div>
  <div class="form-group">
    <%= f.label :diretor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :diretor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:diretor) %>
  </div>
  <div class="form-group">
    <%= f.label :sinopse, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sinopse, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sinopse) %>
  </div>
  <div class="form-group">
    <%= f.label :cat_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:cat_id, Cat.all, :id, :nome, { prompt: true }, :class => 'form-control')%>
    </div>
    <%=f.error_span(:cat_id) %>
  </div>
  <div class="form-group">
    <%= f.label :classi_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:classi_id, Classi.all, :id, :nome, { prompt: true }, :class => 'form-control') %>
    </div>
    <%=f.error_span(:classi_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                filmes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
